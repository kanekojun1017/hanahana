<div class="d-flex justify-content-center mb-3">
  <div class="p-2"><h1>-会員ページ-</h1></div>
</div>

<div class="d-flex justify-content-center mb-3">
  <div class="p-2"><%= image_tag @user.get_profile_image(300, 300) %></div>
</div>

<div class="d-flex justify-content-center mb-3">
  <div class="p-2"><h3><%= @user.name %></h3></div>
</div>

<div class="d-flex justify-content-center mb-3">
  <div class="p-2"><h2>フォロー: <%= link_to @user.followings.count, user_followings_path(@user) %></h2></div>
</div>

<div class="d-flex justify-content-center md-3">
  <div class="p-2"><h2>フォロワー: <%= link_to @user.followers.count, user_followers_path(@user) %></h2></div>
</div>


<% unless @user.guest_user? %>
<div class="d-flex justify-content-center md-3">
  <a href="/users/<%= @user.id %>/edit", class="btn btn-outline-secondary"></ahref>
    <i class="fa-solid fa-user-gear"></i>
  </a>
</div>
<% end %>
<div class="d-flex justify-content-center md-3">
  <%= render "public/relationships/btn", user: @user %>
</div>

<div class="d-flex justify-content-center md-3">
  <%= link_to "お気に入り一覧", post_favorites_path(@user) %>
</div>

<%= render "public/posts/index", posts: @posts%>