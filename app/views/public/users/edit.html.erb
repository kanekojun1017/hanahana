<div class="d-flex justify-content-center md-3">
  <h2>プロフィール編集</h2>
</div>



<%= form_with model: @user do |f| %>
<div class="d-flex justify-content-center md-3">
  <h3>名前</h3>
</div>

<div class="d-flex justify-content-center md-3">
  <%= f.text_field :name, autfocus: true, id:"inputName" %>
</div>

<div class="d-flex justify-content-center m-3">
  <h4>プロフィール画像</h4>
</div>

<div class="d-flex justify-content-center md-3">
  <%= f.file_field :profile_image, accept: "image/*" %>
</div>

<div class="d-flex justify-content-center md-3 mt-3">
  <%= f.submit "更新" %>
</div>

<% end %>

