<div class="d-flex justify-content-center m-3">
  <h1>投稿編集</h1>
</div>

<%= form_with model: @post do |f| %>
<div class="d-flex justify-content-center m-3">
 <h2>投稿</h2>
</div>

<div class="d-flex justify-content-center m-3">
  <%=f.file_field :image %>
</div>

<div class="d-flex justify-content-center m-3">
 <h3>説明</h3>
</div>

<div class="d-flex justify-content-center m-3">
 <%=f.text_area :body %>
</div>

<div class="d-flex justify-content-center m-3">
 <h3>住所</h3>
</div>
 
<div class="d-flex justify-content-center m-3">
 <%= f.text_field :address %>
</div>

<div class="d-flex justify-content-center m-3">
 <%= f.submit '更新'%> 
</div>
<% end %>