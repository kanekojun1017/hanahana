<div class="d-flex justify-content-center md-3">
  <h1>-投稿一覧-</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="">ユーザー画像</th>
      <th colspan="">投稿画像</th>
      <th colspan="">説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      
  <tbody>
  <% posts.each do |post| %>
   <tr>
    <td>
      <%= link_to user_path(post.user_id) do %>
        <%= image_tag post.user.get_profile_image(80, 80) %>
      <% end %>
    </td>
    
    <td>
      <%= image_tag post.get_image(80, 80) %>
    </td>
    <td>
      <%= link_to post_path(post.id) do %>
        <%= post.body %>
      <% end %>
    </td>
    <td><%= render "public/favorites/btn", post: post %></td>
    <td>コメント数: <%= post.comments.count %></td>
   </tr>
  <% end %>
  
  </tbody>
  
 </table>
 