<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th>ユーザー画像</th>
      <th>投稿</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
      
  <tbody>
  <% @posts.each do |post| %>
   <tr>
    <td>
      <%= link_to user_path(post.user_id) do %>
        <%= image_tag post.user.get_profile_image(80, 80) %>
      <% end %>
    </td>
    <td>
      <%= link_to post_path(post.id) do %>
        <%= post.body %>
      <% end %>
    </td>
   </tr>
  <% end %>
  </tbody>
 </table>